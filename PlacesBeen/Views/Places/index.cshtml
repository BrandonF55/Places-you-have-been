<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Dem Places!</title>
    <link 
      rel="stylesheet" 
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" 
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" 
      crossorigin="anonymous">
  </head>
  <body style="text-align: center; padding-top: 50px; background-color: gold; list-style-position: inside;">
    @using PlacesBeen.Models;

    <h1>Places I've Been</h1>

    @if (Model.Count == 0)
    {
      <p>Add some places to the list.</p>
    }
    <ul>
      @foreach (Places i in Model)
      {
        <li><a href='/places/@i.Id'>@i.CityName</a></li>
      }
    </ul>
    
    <a href="/places/new">Add a new travel location.</a>

    <form action="/places/delete" method="post">
      <button type="submit" name="button">Clear All Places</button>
    </form>
  </body>
</html>